    { device = "/dev/disk/by-uuid/431d7878-e047-4a79-ad11-a452a4a7efd7";
      fsType = "ext4";
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/A1C1-06B1";
      fsType = "vfat";
      options = [ "fmask=0077" "dmask=0077" ];
    };

